<header id="header-is_fixed">
  <%= render partial: "layouts/forever_style_guide/navigation" %>
</header>

<div class="hero_simple hero_simple-sample">
  <div class="container-fluid">
    <div class="row">
      <div class="col-xs-12 text-center hero_simple-block color_block_trans-secondary">
        <h1 class="page-title">Now presenting .hero_simple</h1>
        <p>Available in all the standard brand colors for (hopefully) easy implementation.</p>
        <%= link_to 'Primary Action', "#", class: 'btn btn-lg btn-primary hero_simple-block-cta', title: "Primary Action" %>
        <%= link_to 'Learn More', "#", class: 'btn btn-lg btn-artisan btn-inverse hero_simple-block-cta ', title: "Learn More" %>
      </div>
    </div>
  </div>
</div>

<div class="clearfix l-padded"></div>

<div class="hero_simple hero_simple-sm color_block-services">
  <div class="container-fluid">
    <div class="row">
      <div class="text-center l-padded hero_simple-sm-block">
        <h1 class="page-title">Only have text to work with?</h1>
        <p>No problem! <code>.hero_simple-sm</code> is here for you.</p>
      </div>
    </div>
  </div>
</div>

<div class="clearfix l-padded"></div>

<div class="hero_simple hero_simple-sm hero_simple-sm-action color_block-accent">
  <div class="container-fluid">
    <div class="row">
      <div class="text-center l-padded hero_simple-sm-action-block ">
        <h1 class="page-title">Need to add something extra?</h1>
        <p><code>.hero_simple-sm-action</code> should help.</p>
        <div class="l-section-close">
          <%= link_to 'Primary Action', "#", class: 'btn btn-lg btn-link btn-inverse col-lg-2 col-lg-offset-5', title: "Primary Action" %>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="clearfix l-padded"></div>
