<!-- Trigger the modal with a button -->
<button type="button" class="btn btn-artisan btn-lg" data-toggle="modal" data-target="#myModal">Decision Modal</button>

<!-- Modal -->
<div id="myModal" class="modal fade" role="dialog">
  <div class="modal-dialog">

    <!-- Modal content-->
    <div class="modal-content">
      <div class="modal-header">
        <span type="button" class="close modal-close-position" data-dismiss="modal"><i class="fa fa-close"></i></span>
        <h4 class="modal-title">Modal Header</h4>
      </div>
      <div class="modal-body">
        <p>Some text in the modal.</p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      </div>
    </div>

  </div>
</div>
