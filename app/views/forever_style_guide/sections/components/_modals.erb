<!-- Trigger the modal with a button -->
<div class='row'>
  <div class='col-md-6'>
    <h3>Informative Modals:</h3>
    <button type="button" class="btn btn-danger btn-md" data-toggle="modal" data-target="#info1">Decision/Action</button>
    <button type="button" class="btn btn-danger btn-inverse btn-md" data-toggle="modal" data-target="#info2">Info/Agreement</button>
  </div>
  <div class='col-md-6'>
    <h3>Product Modals:</h3>
    <button type="button" class="btn btn-primary btn-md" data-toggle="modal" data-target="#product1">Add to Cart</button>
    <button type="button" class="btn btn-primary btn-inverse btn-md" data-toggle="modal" data-target="#product2">Product Details</button>
  </div>
  <div class='col-md-6'>
    <h3>Media Modals:</h3>
    <button type="button" class="btn btn-artisan btn-md" data-toggle="modal" data-target="#media1">Help Content</button>
    <button type="button" class="btn btn-artisan btn-inverse btn-md" data-toggle="modal" data-target="#media2">New Feature</button>
  </div>
  <div class='col-md-6'>
    <h3>Field Modals:</h3>
    <button type="button" class="btn btn-services btn-md" data-toggle="modal" data-target="#field1">Promotional</button>
    <button type="button" class="btn btn-services btn-inverse btn-md" data-toggle="modal" data-target="#field2">Sign in/up</button>
  </div>
</div>

<!-- Informative Modals -->
<div id="info1" class="modal fade" role="dialog">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header modal-theme color_block-danger">
        <span type="button" class="modal-close-position" data-dismiss="modal"><i class="fa fa-close fa-2x"></i></span>
        <h3 class="modal-title"><i class="fa fa-trash-o"></i> Delete Photo?</h3>
      </div>
      <div class="modal-body modal-body-info">
        <p>Are you sure you want to <strong>delete this photo from all locations</strong>, including inbox, albums, tags and dates?</p>
      </div>
      <div class="modal-footer modal-footer-info">
        <span class="pull-left modal-footer-txt"><i>This action cannot be undone.</i></span>
        <button type="button" class="btn btn-link" data-dismiss="modal">Cancel</button>
        <button type="button" class="btn btn-primary" data-dismiss="modal">Yes, Delete</button>
      </div>
    </div>
  </div>
</div>

<div id="info2" class="modal fade" role="dialog">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header modal-theme color_block-danger">
        <span type="button" class="modal-close-position" data-dismiss="modal"><i class="fa fa-close fa-2x"></i></span>
        <h3 class="modal-title"><i class="fa fa-exclamation-circle"></i> Confirm Cancellation</h3>
      </div>
      <div class="modal-body modal-body-info">
        <h4 class="modal-body-title">Are you sure you want to cancel your subscription?</h4>
        <p>Your photos and documents will no longer be guaranteed.  You will not be able to add any additional items to Forever.</p>
      </div>
      <div class="modal-footer modal-footer-info">
        <span class="pull-left modal-footer-txt"><i>This action cannot be undone.</i></span>
        <button type="button" class="btn btn-link" data-dismiss="modal">Cancel</button>
        <button type="button" class="btn btn-primary" data-dismiss="modal">Yes, Delete</button>
      </div>
    </div>
  </div>
</div>

