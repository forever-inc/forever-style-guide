<div class='container-fluid'>
  <div class='row'>
    <div class='col-xs-12 l-padded-thin'>

      <ul class="list-unstyled">
        <li class="dropdown-menu-account-item">
          <% if current_user.avatar_url_small %>
            <%= image_tag current_user.avatar_url_small, class: "dropdown-menu-account-avatar avatar avatar-sm pull-left", alt: current_user.name, title: current_user.name %>
          <% else %>
            <%= image_tag "default_avatar.jpg", class: "dropdown-menu-account-avatar avatar avatar-sm pull-left", alt: current_user.name, title: current_user.name %>
          <% end %>

          <div class="dropdown-menu-account-user">
            <p class="dropdown-menu-account-user-intro color-gray-300">Signed in as</p>
            <h4 class="page-title color-gray-300"><%= current_user.name %></h4>
          </div>
        </li>

        <li class="dropdown-menu-account-divider"></li>

        <li class="dropdown-menu-account-item">
          <p class="color-gray-300">
            <span class="dropdown-menu-account-storage">40% of 50Gb</span>
            <%= link_to "Upgrade", '/pricing', class: 'small', title: "Upgrade your Forever Guaranteed Permanent Storage" %>
          </p>

          <div class="progress progress-thin color_block-primary">

            <!-- TODO actually display storage -->
            <div class="progress-bar color_block-gray-400" role="progressbar" aria-valuenow="40" aria-valuemin="0" aria-valuemax="100" style="width: 40%"></div>
          </div>
        </li>

        <li class="dropdown-menu-account-divider"></li>

        <li class="dropdown-menu-account-item">
          <%= link_to '/settings', class: 'dropdown-menu-nav-link dropdown-menu-nav-link-no_margin', title: 'View User Settings' do %>
            <i class='fa fa-cog'></i>Settings
          <% end %>
        </li>

        <!-- if current_user.is_ambassador -->
        <li class="dropdown-menu-account-item">
          <%= link_to '/back-office', class: 'dropdown-menu-nav-link dropdown-menu-nav-link-no_margin', title: 'Ambassador Back Office Reports' do %>
            <i class='fa fa-suitcase'></i>My Back Office
          <% end %>
        </li>

        <li class="dropdown-menu-account-divider hidden-xs hidden-sm"></li>

        <li class="dropdown-menu-account-item">
          <%= link_to '/log-out', class: 'dropdown-menu-nav-link dropdown-menu-nav-link-no_margin', title: 'Log Out of Forever' do %>
            <i class='fa fa-share'></i>Log Out
          <% end %>
        </li>
      </ul>

    </div>
  </div>
</div>
